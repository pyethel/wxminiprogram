<view class="detail_image">
    <image mode="widthFix" src="{{goodsObj.imageSrc}}"/>
</view>
<view class="goods_price">¥{{goodsObj.price}}</view>
<view class="goods_name">{{goodsObj.name}}</view>

<view class="btm_tool">
    <navigator url="/pages/cart/cart" class="tool_item" open-type="switchTab">
        <view class="iconfont icon-gouwuche"></view>
        <view>购物车</view>
    </navigator>
    <view class="tool_item btn_cart" bindtap="handleCartAdd">
        加入购物车
    </view>
</view>